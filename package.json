{
  "name": "finance",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "dotenv -e .env.test -- npx prisma db push --force-reset && jest --runInBand",
    "test:ci": "dotenv -e .env.test -- ./entrypoint-test-ci.sh",
    "test:watch": "dotenv -e .env.test -- npx prisma db push --force-reset && jest --watch",
    "test:studio": "dotenv -e .env.test -- npx prisma studio",
    "cli": "npx ts-node -r tsconfig-paths/register",
    "format": "prettier --write \"src/**/*.(ts|tsx)\"",
    "prepare": "husky",
    "release": "release-it"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.6.0",
    "@hookform/resolvers": "^3.9.0",
    "@prisma/client": "5.1.1",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@tanstack/react-query": "^5.59.9",
    "@tanstack/react-table": "^8.20.5",
    "@tippyjs/react": "^4.2.6",
    "@types/node": "20.5.0",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "1.0.0",
    "dayjs": "^1.11.13",
    "dayjs-plugin-utc": "^0.1.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "8.47.0",
    "eslint-config-next": "14.0.4",
    "i18next": "^23.15.2",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.426.0",
    "next": "^14.2.15",
    "next-auth": "^4.24.8",
    "next-themes": "^0.3.0",
    "nuqs": "^1.20.0",
    "react": "18.2.0",
    "react-day-picker": "8.10.1",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.53.0",
    "react-i18next": "^15.0.2",
    "react-modal": "^3.16.1",
    "recharts": "2.13.0-alpha.4",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.1.6",
    "vaul": "^0.9.9",
    "zod": "^3.23.8",
    "zod-i18n-map": "^2.27.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@faker-js/faker": "^8.4.1",
    "@release-it/conventional-changelog": "^8.0.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^14.3.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.13",
    "@types/nodemailer": "^6.4.16",
    "@types/react-modal": "^3.16.3",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^9.6.0",
    "husky": "^9.1.6",
    "inquirer": "^9.3.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemailer": "^6.9.15",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prisma": "5.1.1",
    "release-it": "^17.8.2",
    "tailwindcss": "^3.4.13",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.(ts|tsx)": "prettier --write"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        },
        "infile": "CHANGELOG.md"
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "pnpm": {
    "overrides": {
      "nodemailer@<=6.9.8": ">=6.9.9",
      "jose@>=3.0.0 <=4.15.4": ">=4.15.5",
      "follow-redirects@<=1.15.5": ">=1.15.6",
      "next@>=13.4.0 <14.1.1": ">=14.1.1",
      "braces@<3.0.3": ">=3.0.3",
      "ws@>=8.0.0 <8.17.1": ">=8.17.1",
      "axios@>=1.3.2 <=1.7.3": ">=1.7.4",
      "micromatch@<4.0.8": ">=4.0.8",
      "dompurify@<2.5.4": ">=2.5.4"
    }
  }
}
